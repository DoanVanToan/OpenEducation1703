<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.framgia.toandoan.MainActivity"
    >

    <Button
        android:id="@+id/button_song_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thương mấy cũng là người dưng"
        />

    <Button
        android:id="@+id/button_song_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_song_1"
        android:text="Yêu mấy cũng là tha thu"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_previous"
            />
        <ImageView
            android:id="@+id/image_pause"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_pause"
            />

        <ImageView
            android:id="@+id/image_play"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_play"
            />

        <ImageView
            android:id="@+id/image_next"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_next"
            />

    </LinearLayout>

</RelativeLayout>
